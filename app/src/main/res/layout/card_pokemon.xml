<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#F1F1F1"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp">

        <!-- Imagen del Pokémon -->
        <ImageView
            android:id="@+id/imagenPokemon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_border"
            android:scaleType="centerCrop"
            android:src="@drawable/abomasnow" />

        <!-- Nombre del Pokémon -->
        <TextView
            android:id="@+id/nombrePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagenPokemon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Pikachu"
            android:textColor="#FF8C00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Estatus de las estadísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombrePokemon"
            android:orientation="vertical">

            <!-- Fila HP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etiquetaHP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="HP"
                    android:textColor="#2E8B57"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/valorHP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#2E8B57"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Fila Ataque -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etiquetaAtaque"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="Ataque"
                    android:textColor="#FF4500"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/valorAtaque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55"
                    android:textColor="#FF4500"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Fila Defensa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etiquetaDefensa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="Defensa"
                    android:textColor="#1E90FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/valorDefensa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textColor="#1E90FF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Fila Ataque Especial -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etiquetaAtaqueEspecial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="A. Especial"
                    android:textColor="#8A2BE2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/valorAtaqueEspecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="#8A2BE2"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Fila Defensa Especial -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/etiquetaDefensaEspecial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:text="D. Especial"
                    android:textColor="#D2691E"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/valorDefensaEspecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="#D2691E"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
